{
  "name": "remark-heading-gap",
  "version": "4.0.0",
  "description": "remark plugin to adjust the gap between headings",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "heading",
    "gap",
    "space",
    "newlines",
    "whitespace"
  ],
  "repository": "remarkjs/remark-heading-gap",
  "bugs": "https://github.com/remarkjs/remark-heading-gap/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
  "contributors": [
    "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "c8": "^7.0.0",
    "prettier": "^2.0.0",
    "remark": "^14.0.0",
    "remark-cli": "^10.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "xo": "^0.37.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test/index.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov npm run test-api",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "#": "this plugin is currently not turned on while remark is updating",
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-no-consecutive-blank-lines",
        false
      ]
    ]
  }
}
